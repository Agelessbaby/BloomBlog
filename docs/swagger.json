    "paths": {
        "/bloomblog/feed/getfeed": {
            "get": {
                "description": "This endpoint allows users to fetch feed data using the latest timestamp and an optional authentication token.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "feed"
                ],
                "summary": "Retrieve feed",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "The timestamp for the latest feed item (optional). Defaults to now if not provided.",
                        "name": "latest_time",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation, returns the feed data.",
                        "schema": {
                            "$ref": "#/definitions/feed.BloomblogFeedResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid input data, such as malformed timestamp.",
                        "schema": {
                            "$ref": "#/definitions/feed.BloomblogFeedResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error.",
                        "schema": {
                            "$ref": "#/definitions/feed.BloomblogFeedResponse"
                        }
                    }
                }
            }
        },
        "/bloomblog/publish/action": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "This endpoint allows users to publish a blog post with images, title, and content.",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "publish"
                ],
                "summary": "Publish a blog post",
                "parameters": [
                    {
                        "type": "string",
                        "description": "The title of the blog post",
                        "name": "title",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "The content of the blog post",
                        "name": "content",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "file",
                        "description": "Multiple image files (repeatable), upload all images as part of 'images' field",
                        "name": "images",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The response object",
                        "schema": {
                            "$ref": "#/definitions/publish.BloomblogPublishActionResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid input data",
                        "schema": {
                            "$ref": "#/definitions/publish.BloomblogPublishActionResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/publish.BloomblogPublishActionResponse"
                        }
                    }
                }
            }
        },
